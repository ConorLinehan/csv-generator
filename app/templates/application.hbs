<div class="hero is-primary">
  <div class="hero-head">
    <nav class="nav is-primary">
      <div class="nav-left">
        <div class="nav-item is-brand">
          <h1 class="title">
            CSV Generator
          </h1>
        </div>
      </div>
      <div class="nav-right">
        <a href="https://github.com/ConorLinehan/csv-generator" class="nav-item is-brand">
          <span class="icon">
            <img src="assets/svgs/github.svg" alt="github icon" />
          </span>
        </a>
      </div>
    </nav>
  </div>
</div>
<main class="section">
  {{outlet}}
</main>

{{modal-target}}

{{!-- Show progress modal --}}
{{#if interface.isGenerating}}
  {{log "entered"}}
  {{to-elsewhere
    named="modal"
    send=(hash
    body=(component "progress-modal" progress=interface.progress onOutsideClick=(action a)))
  }}
{{/if}}
