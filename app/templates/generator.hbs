<div class="box">
  <div class="columns">
    {{!-- Fake Columns --}}
    <div class="column">
      <div class="box">
        <ul>
          {{#each fakeColumns as |column|}}
            <li>Indication</li>
          {{/each}}
        </ul>
        <a {{action (action (mut addGenerator)) true}}>
          Add new col
        </a>
      </div>
    </div>
    {{!-- No. Rows and download --}}
    <div class="column">
      <button class="button is-primary">Download</button>
    </div>
  </div>
</div>


{{#if addGenerator}}
  {{to-elsewhere
    named="modal"
    send=(hash
    body=(component "generators-modal")
    onOutsideClick=(action (mut addGenerator) false)
    )
  }}
{{/if}}
